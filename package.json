{
  "name": "tailwind-application",
  "version": "1.0.0",
  "private": true,
  "description": "My personal application for the position of Staff Software Engineer at Tailwind Labs.",
  "type": "module",
  "scripts": {
    "build": "pnpm run \"/^build:.*/\"",
    "build:copy": "tsx src/build/copy.tsx",
    "build:react": "tsx src/build/render.tsx",
    "build:tailwind": "tailwindcss --input src/app.css --output dist/app.css",
    "clean": "pnpm run \"/^clean:.*/\"",
    "clean:build": "rimraf dist",
    "clean:cache": "rimraf node_modules/.cache",
    "dev": "pnpm run \"/^dev:.*/\"",
    "dev:copy": "nodemon --watch public --watch src/build/copy.tsx --ext png,jpg,svg,tsx --import tsx src/build/copy.tsx",
    "dev:react": "nodemon --watch src --ext js,jsx,ts,tsx,md,css --import tsx src/build/render.tsx",
    "dev:serve": "reload --dir dist",
    "dev:tailwind": "tailwindcss --watch --input src/app.css --output dist/app.css",
    "format": "pnpm run \"/^format:.*/\"",
    "format:eslint": "eslint . --fix --cache --cache-location node_modules/.cache/eslint",
    "format:prettier": "prettier --write . --cache",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "eslint . --cache --cache-location node_modules/.cache/eslint",
    "lint:prettier": "prettier --check . --cache",
    "start": "serve dist"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.3",
    "clsx": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@tailwindcss/cli": "^0.1.2",
    "@tailwindcss/typography": "^0.5.12",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint__js": "^8.42.3",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.23",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "fs-extra": "^11.2.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-packagejson": "^2.4.13",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "reload": "^3.2.1",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.1",
    "typescript-eslint": "^7.4.0"
  }
}
